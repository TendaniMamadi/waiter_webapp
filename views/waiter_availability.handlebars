        </td>
      </tr>
      <tr>
        <td>Wednesday</td>
        <td class="{{groupedData.Wednesday.colour}}">
          {{#if groupedData.Wednesday}}
          {{groupedData.Wednesday}}
          {{else}}
          <p>no waiters available</p>
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>Thursday</td>
        <td class="{{groupedData.Thursday.colour}}">
          {{#if groupedData.Thursday}}
          {{groupedData.Thursday}}
          {{else}}
          <p>no waiters available</p>
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>Friday</td>
        <td class="{{groupedData.Friday.colour}}">
          {{#if groupedData.Friday}}
          {{groupedData.Friday}}
          {{else}}
          <p>no waiters available</p>
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>Saturday</td>
        <td class="{{groupedData.Saturday.colour}}">
          {{#if groupedData.Saturday}}
          {{groupedData.Saturday}}
          {{else}}
          <p>no waiters available</p>
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>Sunday</td>
        <td class="{{groupedData.Sunday.colour}}">
          {{#if groupedData.Sunday}}
          {{groupedData.Sunday}}
          {{else}}
          <p>no waiters available</p>
          {{/if}}
        </td>
      </tr>
    </tbody>
  </table>

</form>

<form action="/days" method="post">

  <button type="submit"><i class='bx bx-reset'></i>Reset</button>

</form>

<form action="/logout" method="get">
  <button type="submit"><i class='bx bx-log-out'></i>Logout</button>
</form>


<div class="legend">
  <div class="legend-item">
    <span class="legend-color" style="background-color: red;"></span>
    <span class="legend-text">Over-Booked</span>
  </div>
