<h1>Waiter Availability</h1>
<form action="/days" method="post">
  <table>
    <thead>
      <tr>
        <th>Availability</th>
        <th>Waiter Name</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Monday</td>
        <td class="{{groupedData.Monday.colour}}">
          {{#if groupedData.Monday}}
          {{groupedData.Monday}}
          {{else}}
          <p>no waiters available</p>
          {{/if}}
        </td>
      </tr>
      <tr>
        <td>Tuesday</td>
        <td class="{{groupedData.Tuesday.colour}}">
          {{#if groupedData.Tuesday}}
          {{groupedData.Tuesday}}
          {{else}}
