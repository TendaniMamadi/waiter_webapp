<div class="login-wrap">


  <div class="image">
    <div class="loginbox">
      <img src="/img/avatar.png" alt="" class="avatar" width="100">
      <h1 class="multicolor-h1">
        Login Here
      </h1>
      <form action="/" method="post">
        <p>Username</p>
        <input type="text" name="username" placeholder="Enter Username" required>
        <p>Password</p>
        <input type="password" name="password" placeholder="Enter Password" required>
        <br>
        <button type="submit" name="" value="Enter"><i class='bx bx-log-in'></i></button>
      </form>
      <br>
      <p>Don't have an account yet?<a href="/signup">SignUp</a></p>

      <br>
      <div class="errorMessage">
        {{#if messages.error}}
        <div class="error">
          <p class="messages" style="color: rgb(239, 0, 0);">{{messages.error}}</p>
        </div>
        {{/if}}
      </div>
    </div>



  </div>

</div>

<script>
  setTimeout(function () {
    const errorDiv = document.querySelector('.errorMessage');
    if (errorDiv) {
      errorDiv.style.display = 'none';
    }
  }, 5000);
</script>