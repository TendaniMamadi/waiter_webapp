<h1>Welcome, {{ username }}</h1>
<form action="/waiters/{{username}}" method="post">
    <label for="monday">Monday:</label>
    <input type="checkbox" name="days" value="Monday" id="monday"><br>

    <label for="tuesday">Tuesday:</label>
    <input type="checkbox" name="days" value="Tuesday" id="tuesday"><br>

    <label for="wednesday">Wednesday:</label>
    <input type="checkbox" name="days" value="Wednesday" id="wednesday"><br>

    <label for="thursday">Thursday:</label>
    <input type="checkbox" name="days" value="Thursday" id="thursday"><br>

    <label for="friday">Friday:</label>
    <input type="checkbox" name="days" value="Friday" id="friday"><br>

    <label for="saturday">Saturday:</label>
    <input type="checkbox" name="days" value="Saturday" id="saturday"><br>

    <label for="sunday">Sunday:</label>
    <input type="checkbox" name="days" value="Sunday" id="sunday"><br>
    <br>

    <input type="submit" value="Submit">
</form>

<div class="displayMessage">
    {{#if messages.success}}
    <div class="success">
        <p class="messages" style="color: rgb(8, 156, 42);">{{messages.success}}</p>
    </div>
    {{/if}}

    {{#if messages.warning}}
    <div class="warning">
        <p class="messages" style="color: rgb(241, 233, 0);">{{messages.warning}}</p>
    </div>
    {{/if}}

    {{#if messages.error}}
    <div class="error">
        <p class="messages" style="color: rgb(239, 0, 0);">{{messages.error}}</p>
    </div>
    {{/if}}
</div>